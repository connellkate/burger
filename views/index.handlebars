<h1>Burgers!!!</h1>

<h2>Burgers you can eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
  <li>
    <p>{{burger_name}}</p>
    <button class="change_devour" data-id="{{id}}" data-state="1">Eat it!!!</button>
    <button class="remove_burg" data-id="{{id}}">X</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!!!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
    <p>{{burger_name}}</p>
  
    <button class="change_devour" data-id="{{id}}" data-state="0">I want it back!!!</button>
    <button class="remove_burg" data-id="{{id}}">X</button>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newBurg" name="name">
  </div>
  <button type="submit">Add Burg</button>
</form>
